<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lease Data</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Auto-refresh every 30 seconds -->
    <meta http-equiv="refresh" content="30">
</head>
<body>
    <div class="container">
        <h1>Lease Information</h1>
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>IPv4 Address</th>
                    <th>HW Address</th>
                    <th>Client ID</th>
                    <th>Valid Lifetime</th>
                    <th colspan="3">Expire</th>
                    <th>Subnet ID</th>
                    <th>Hostname</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for lease in leases %} {# 'leases' is now 'processed_leases' #}
                <tr>
                    <td>{{ lease.ipv4addr }}</td>  {# Access 'ipv4addr' key #}
                    <td>{{ lease.hwaddr_formatted|default_if_none:"" }}</td> {# Access 'hwaddr_formatted' key #}
                    <td>{{ lease.clientid_formatted|default_if_none:"" }}</td> {# Access 'clientid_formatted' key #}
                    <td>{{ lease.valid_lifetime|default_if_none:"" }}</td>
                    <td colspan="3">{{ lease.expire|date:"DATETIME_FORMAT"|default_if_none:"" }}</td>
                    <td>{{ lease.subnet_id|default_if_none:"" }}</td>
                    <td>{{ lease.hostname|default_if_none:"" }}</td>
                    <td>
                        <form method="post" action="{% url 'lease4_delete_url' %}">
                            {% csrf_token %}
                            <input type="hidden" name="address" value="{{ lease.address }}"> {# Access 'address' key #}
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
                {% empty %}
                <tr>
                    <td colspan="12" class="text-center">No lease data available.</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS (optional) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
